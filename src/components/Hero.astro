---
import Button from './Button.astro';

const stats = [
  { value: '2+ yrs', label: 'Enterprise Experience' },
  { value: 'DevOps', label: 'CI/CD • IaC • K8s' },
  { value: 'Security', label: 'SOC • VM • Cloud' },
];

const featuredHighlights = [
  {
    label: 'Password Manager (AES-256-GCM)',
    href: 'https://github.com/VibhavChennamadhava/Password_manager',
  },
  {
    label: 'SMTP Mail Server Lab (SPF/DKIM/DMARC)',
    href: 'https://github.com/VibhavChennamadhava/Designing-an-SMTP-Mail-Server-Using-iRedMail',
  },
];
---

<section class="hero relative min-h-screen flex items-center pt-[72px] overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-bg-primary via-bg-primary/70 to-bg-secondary"></div>

  <!-- Animated background elements (overlay) -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-accent-coral/10 rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent-teal/10 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 1s;"></div>
  </div>

  <div class="container relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Avatar -->
      <div class="mx-auto mb-8 w-28 h-28 sm:w-32 sm:h-32 rounded-full overflow-hidden ring-4 ring-accent-coral/30 bg-bg-hover border border-border-default">
        <img
          src="/profile.jpg"
          alt="Vibhav Chennamadhava"
          class="w-full h-full object-cover"
          loading="eager"
        />
      </div>

      <!-- Title -->
      <h1 class="hero-title text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black text-text-primary mb-6 tracking-tight">
        <span class="block" data-animate="split-text">VIBHAV CHENNAMADHAVA</span>
      </h1>

      <!-- Tagline -->
      <p class="hero-tagline text-xl sm:text-2xl md:text-3xl text-text-secondary mb-4" data-animate="fade-up" data-delay="200">
        DevSecOps • DevOps • Cybersecurity • <span class="text-accent-coral font-semibold">Cloud & IAM</span>
      </p>

      <!-- Description -->
      <p class="hero-description text-base sm:text-lg text-text-muted max-w-3xl mx-auto mb-6" data-animate="fade-up" data-delay="400">
        Hands-on in CI/CD automation, Terraform/IaC, Docker/Kubernetes, monitoring, plus security operations (SIEM, incident response support, vulnerability management, and cloud/IAM fundamentals). Targeting SOC Analyst, Security Engineer, and Cloud Security roles.
      </p>

      <!-- Top CTA -->
      <div class="hero-ctas flex flex-col sm:flex-row items-center justify-center gap-3 mb-8" data-animate="fade-up" data-delay="500">
        <Button href="/resume.pdf" variant="primary" size="lg" external>
          <i data-lucide="file-text" class="w-5 h-5"></i>
          Resume
        </Button>
        <Button href="https://github.com/VibhavChennamadhava" variant="secondary" size="lg" external>
          <i data-lucide="github" class="w-5 h-5"></i>
          GitHub
        </Button>
        <Button href="https://www.linkedin.com/in/vibhav-chennamadhava-61184b190" variant="secondary" size="lg" external>
          <i data-lucide="linkedin" class="w-5 h-5"></i>
          LinkedIn
        </Button>
        <Button href="mailto:vibhav.chennamadhava@gmail.com" variant="secondary" size="lg" external>
          <i data-lucide="mail" class="w-5 h-5"></i>
          Email
        </Button>
      </div>

      <!-- Featured work above the fold -->
      <div class="bg-bg-card/60 border border-border-default rounded-2xl p-6 mb-10" data-animate="fade-up" data-delay="600">
        <div class="text-xs font-semibold text-accent-coral uppercase tracking-widest mb-3">Featured</div>
        <div class="grid gap-3 sm:grid-cols-2 text-left">
          {featuredHighlights.map((item) => (
            <a
              href={item.href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-between gap-3 bg-bg-hover border border-border-default rounded-xl px-4 py-3 text-sm text-text-secondary hover:border-border-accent hover:text-text-primary transition-all"
            >
              <span>{item.label}</span>
              <i data-lucide="arrow-up-right" class="w-4 h-4"></i>
            </a>
          ))}
        </div>
      </div>

      <!-- Stats -->
      <div class="hero-stats flex flex-wrap items-center justify-center gap-8 sm:gap-16" data-animate="fade-up" data-delay="800">
        {stats.map((stat, index) => (
          <div class="text-center" data-animate="counter" data-delay={800 + index * 100}>
            <div class="text-3xl sm:text-4xl md:text-5xl font-extrabold gradient-text mb-1">
              {stat.value}
            </div>
            <div class="text-sm text-text-muted uppercase tracking-wide">
              {stat.label}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <i data-lucide="chevron-down" class="w-6 h-6 text-text-muted"></i>
  </div>
</section>

<style>
  .hero-title {
    text-shadow: 0 4px 20px rgba(242, 56, 90, 0.2);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-accent-coral), var(--color-accent-teal));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
