---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';

const devopsSkills = [
  { category: 'Version Control & Collaboration', items: ['Git', 'GitHub', 'GitLab', 'Bitbucket'] },
  { category: 'CI/CD', items: ['Jenkins', 'GitHub Actions', 'GitLab CI', 'Bamboo'] },
  { category: 'Infrastructure as Code', items: ['Terraform', 'AWS CloudFormation', 'Ansible', 'Puppet', 'Chef'] },
  { category: 'Containers & Orchestration', items: ['Docker', 'Kubernetes (K8s)', 'OpenShift', 'Nomad'] },
  { category: 'Monitoring & Logging', items: ['Prometheus', 'Grafana', 'Datadog', 'ELK Stack', 'Splunk'] },
  { category: 'Planning & Delivery', items: ['Jira', 'Trello', 'Confluence', 'ClickUp'] },
  { category: 'Security & Quality', items: ['HashiCorp Vault', 'SonarQube'] },
];

const securitySkills = [
  { category: 'SIEM / Monitoring', items: ['Splunk', 'IBM QRadar', 'AlienVault', 'SolarWinds'] },
  { category: 'Vulnerability Management', items: ['Nessus', 'Nmap', 'OpenVAS', 'Qualys', 'Nexpose'] },
  { category: 'Network Security', items: ['Wireshark', 'Snort', 'Firewalls (Cisco ASA, Fortinet)', 'VPN', 'IDS/IPS'] },
  { category: 'Penetration Testing', items: ['Kali Linux', 'Metasploit', 'OWASP ZAP', 'Nikto'] },
  { category: 'Endpoint Security', items: ['CrowdStrike', 'Symantec', 'McAfee', 'OSSEC'] },
];

const keywords = [
  'Network Security', 'Incident Response', 'Risk Management', 'Threat Intelligence',
  'Identity & Access Management (IAM)', 'Cloud Security (AWS, Azure)',
  'Vulnerability Management', 'Risk Assessment', 'Compliance (GDPR, HIPAA)',
  'MITRE ATT&CK', 'Zero Trust', 'NIST', 'SASE',
  'Threat Hunting', 'Digital Forensics', 'Data Loss Prevention (DLP)',
  'Python', 'Bash/Shell Scripting', 'PowerShell', 'SQL', 'Cryptography',
];

const timeline = [
  {
    year: '2022–2023',
    title: 'DevOps / Security Support Engineer (Accenture)',
    description: 'CI/CD and ops support, incident investigations, vulnerability remediation tracking, IAM support, and automation scripts for investigations/reporting.',
  },
  {
    year: '2024–2025',
    title: 'MS in Cybersecurity (University of North Texas)',
    description: 'SOC-style labs, vulnerability assessment labs (Nmap/Nessus/ZAP), log analysis, and security documentation/writeups.',
  },
  {
    year: '2025–Present',
    title: 'DevSecOps Learning & Hands-on Practice',
    description: 'Terraform, GitHub Actions, Docker/Kubernetes, Prometheus/Grafana, plus HTB/TryHackMe lab practice to strengthen security fundamentals.',
  },
];

const socialLinks = [
  { name: 'GitHub', icon: 'github', href: 'https://github.com/VibhavChennamadhava' },
  { name: 'LinkedIn', icon: 'linkedin', href: 'https://linkedin.com/in/vibhav-chennamadhava-61184b190' },
  { name: 'Hack The Box', icon: 'shield', href: 'https://app.hackthebox.com/users/1841858' },
  { name: 'TryHackMe', icon: 'terminal', href: 'https://tryhackme.com/p/vibhav.chennamadhava' },
  { name: 'Email', icon: 'mail', href: 'mailto:vibhav.chennamadhava@gmail.com' },
];

const ctfProfiles = [
  {
    name: 'Hack The Box',
    href: 'https://app.hackthebox.com/users/1841858',
    badge: 'https://www.hackthebox.com/badge/image/1841858',
  },
  {
    name: 'TryHackMe',
    href: 'https://tryhackme.com/p/vibhav.chennamadhava',
    badge: 'https://tryhackme-badges.s3.amazonaws.com/vibhav.chennamadhava.png?update=1',
  },
];
---

<BaseLayout title="About - Vibhav Chennamadhava" description="DevSecOps, cybersecurity, and cloud/DevOps portfolio for Vibhav Chennamadhava">
  <Header currentPage="about" />

  <main class="pt-[72px]">
    <!-- Hero Section -->
    <section class="py-16 md:py-24 bg-bg-primary">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12 mb-16">
            <!-- Avatar -->
            <div class="flex-shrink-0" data-animate="fade-up">
              <div class="w-48 h-48 md:w-64 md:h-64 rounded-full overflow-hidden ring-4 ring-accent-coral/30 bg-bg-hover border border-border-default">
                <img src="/profile.jpg" alt="Vibhav Chennamadhava" class="w-full h-full object-cover" loading="eager" />
              </div>
            </div>

            <!-- Info -->
            <div class="text-center md:text-left" data-animate="fade-up" data-delay="100">
              <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">
                Sri Vibhav Raju Chennamadhava
              </h1>
              <p class="text-xl text-accent-coral font-medium mb-4">
                DevSecOps • DevOps • Cybersecurity • Cloud/IAM
              </p>
              <p class="text-text-secondary text-lg mb-6">
                Hands-on with DevOps automation (CI/CD, Terraform/IaC, Docker/Kubernetes, monitoring) and security operations fundamentals (SIEM, incident response support, vulnerability management, and cloud/IAM).
              </p>

              <!-- Location -->
              <div class="flex items-center justify-center md:justify-start gap-2 text-text-muted mb-6">
                <i data-lucide="map-pin" class="w-5 h-5"></i>
                <span>Denton, Texas</span>
              </div>

              <!-- Social Links -->
              <div class="flex items-center justify-center md:justify-start gap-3 flex-wrap">
                {socialLinks.map((link) => (
                  <a
                    href={link.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 rounded-lg bg-bg-hover flex items-center justify-center text-text-secondary hover:text-text-primary hover:bg-bg-tertiary transition-all duration-200"
                    aria-label={link.name}
                    title={link.name}
                  >
                    <i data-lucide={link.icon} class="w-5 h-5"></i>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section class="py-16 bg-bg-secondary">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-6" data-animate="fade-up">
            What I Focus On
          </h2>
          <p class="text-xl text-text-secondary mb-8" data-animate="fade-up" data-delay="100">
            "Automation you can trust, and security you can prove."
          </p>
          <p class="text-text-muted" data-animate="fade-up" data-delay="200">
            I like building reliable pipelines, repeatable infrastructure, and clean monitoring—while keeping security fundamentals strong through logs, vulnerability remediation, and lab practice.
          </p>
        </div>
      </div>
    </section>

    <!-- DevOps Skills -->
    <section class="py-16 bg-bg-primary">
      <div class="container">
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary text-center mb-12" data-animate="fade-up">
          DevOps Tooling
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {devopsSkills.map((skill, index) => (
            <div
              class="bg-bg-card border border-border-default rounded-2xl p-6"
              data-animate="fade-up"
              data-delay={index * 80}
            >
              <h3 class="text-lg font-semibold text-accent-coral mb-4">{skill.category}</h3>
              <ul class="space-y-2">
                {skill.items.map((item) => (
                  <li class="text-text-secondary text-sm flex items-center gap-2">
                    <i data-lucide="check" class="w-4 h-4 text-accent-teal"></i>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Security Skills -->
    <section class="py-16 bg-bg-secondary">
      <div class="container">
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary text-center mb-12" data-animate="fade-up">
          Cybersecurity Tools
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {securitySkills.map((skill, index) => (
            <div
              class="bg-bg-card border border-border-default rounded-2xl p-6"
              data-animate="fade-up"
              data-delay={index * 80}
            >
              <h3 class="text-lg font-semibold text-accent-coral mb-4">{skill.category}</h3>
              <ul class="space-y-2">
                {skill.items.map((item) => (
                  <li class="text-text-secondary text-sm flex items-center gap-2">
                    <i data-lucide="check" class="w-4 h-4 text-accent-teal"></i>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Keywords -->
    <section class="py-16 bg-bg-primary">
      <div class="container">
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary text-center mb-12" data-animate="fade-up">
          Skill Keywords
        </h2>

        <div class="max-w-5xl mx-auto bg-bg-card border border-border-default rounded-2xl p-6" data-animate="fade-up" data-delay="100">
          <div class="flex flex-wrap gap-2">
            {keywords.map((k) => (
              <span class="px-3 py-1 text-xs font-medium text-text-muted bg-bg-hover rounded-full">{k}</span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- CTF Profiles -->
    <section class="py-16 bg-bg-secondary">
      <div class="container">
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary text-center mb-12" data-animate="fade-up">
          CTF Profiles
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
          {ctfProfiles.map((p, idx) => (
            <a
              href={p.href}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-bg-card border border-border-default rounded-2xl p-6 hover:border-border-accent transition-all duration-300"
              data-animate="fade-up"
              data-delay={idx * 100}
            >
              <div class="flex items-center justify-between gap-4 mb-4">
                <div class="text-lg font-semibold text-text-primary">{p.name}</div>
                <div class="text-text-muted text-sm flex items-center gap-2">
                  <span>Open profile</span>
                  <i data-lucide="arrow-up-right" class="w-4 h-4"></i>
                </div>
              </div>

              <img
                src={p.badge}
                alt={`${p.name} badge`}
                loading="lazy"
                class="w-full max-w-[420px] mx-auto rounded-xl border border-border-default bg-bg-hover"
              />
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Timeline Section -->
    <section class="py-16 bg-bg-primary">
      <div class="container">
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary text-center mb-12" data-animate="fade-up">
          My Journey
        </h2>

        <div class="max-w-3xl mx-auto">
          <div class="relative">
            <!-- Timeline line -->
            <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-0.5 bg-border-default md:-translate-x-1/2"></div>

            {timeline.map((item, index) => (
              <div
                class={`relative flex items-start gap-6 mb-8 ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}
                data-animate="fade-up"
                data-delay={index * 100}
              >
                <!-- Year dot -->
                <div class="absolute left-4 md:left-1/2 w-3 h-3 bg-accent-coral rounded-full md:-translate-x-1/2 mt-2"></div>

                <!-- Content -->
                <div class={`ml-12 md:ml-0 md:w-1/2 ${index % 2 === 0 ? 'md:pr-12 md:text-right' : 'md:pl-12'}`}>
                  <span class="text-accent-coral font-bold">{item.year}</span>
                  <h3 class="text-xl font-semibold text-text-primary mt-1">{item.title}</h3>
                  <p class="text-text-secondary mt-2">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-bg-secondary">
      <div class="container">
        <div class="max-w-2xl mx-auto text-center" data-animate="fade-up">
          <h2 class="text-3xl font-bold text-text-primary mb-4">
            Want to connect?
          </h2>
          <p class="text-text-secondary mb-8">
            Open to DevOps / DevSecOps / cybersecurity opportunities.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <Button href="https://github.com/VibhavChennamadhava" variant="primary" external>
              <i data-lucide="github" class="w-5 h-5"></i>
              View GitHub
            </Button>
            <Button href="/contact" variant="secondary">
              Contact
            </Button>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
