---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';

const skills = [
  { category: 'Security Operations', items: ['Security monitoring', 'Alert triage', 'Incident response support', 'Log analysis', 'Root-cause analysis', 'Runbooks'] },
  { category: 'SIEM / Telemetry', items: ['Wazuh (SIEM concepts)', 'Splunk', 'ELK (Elasticsearch/Kibana)', 'Windows Event Logs', 'Linux Syslog'] },
  { category: 'Vulnerability Mgmt', items: ['Qualys', 'Nessus', 'Rapid7', 'CVE review', 'Remediation tracking', 'Patch validation'] },
  { category: 'Cloud / IAM', items: ['Entra ID (Azure AD) concepts', 'MFA', 'RBAC', 'Conditional access concepts', 'Access reviews', 'Least privilege'] },
  { category: 'Automation', items: ['Python', 'PowerShell', 'Bash', 'Log parsing', 'Alert enrichment', 'Reporting'] },
  { category: 'Frameworks', items: ['NIST CSF', 'CIS Controls', 'ISO 27001 concepts', 'SOC 2 evidence hygiene'] },
];

const timeline = [
  {
    year: '2022–2023',
    title: 'DevOps / Security Support Engineer (Accenture)',
    description: 'Alert triage, incident investigations, vulnerability remediation tracking, IAM support, SOC 2 change control, and automation scripts for investigations/reporting.',
  },
  {
    year: '2024–2025',
    title: 'MS in Cybersecurity (University of North Texas)',
    description: 'SOC-style labs, incident documentation, vuln assessment labs (Nmap/Nessus/ZAP), and security writing (HTB-style reports).',
  },
  {
    year: '2025',
    title: 'Security+ and Certifications',
    description: 'CompTIA Security+ (SY0-701) plus security foundations and operations training.',
  },
];

const socialLinks = [
  { name: 'GitHub', icon: 'github', href: 'https://github.com/VibhavChennamadhava' },
  { name: 'LinkedIn', icon: 'linkedin', href: 'https://linkedin.com/in/vibhav-chennamadhava-61184b190' },
  { name: 'Email', icon: 'mail', href: 'mailto:vibhav.chennamadhava@gmail.com' },
];
---

<BaseLayout title="About - Vibhav Chennamadhava" description="Cybersecurity & cloud security portfolio for Vibhav Chennamadhava">
  <Header currentPage="about" />

  <main class="pt-[72px]">
    <!-- Hero Section -->
    <section class="py-16 md:py-24 bg-bg-primary">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12 mb-16">
            <!-- Avatar -->
            <div class="flex-shrink-0" data-animate="fade-up">
              <div class="w-48 h-48 md:w-64 md:h-64 rounded-full overflow-hidden ring-4 ring-accent-coral/30 bg-bg-hover border border-border-default flex items-center justify-center">
                <span class="text-5xl md:text-6xl font-black tracking-tight">VC</span>
              </div>
            </div>

            <!-- Info -->
            <div class="text-center md:text-left" data-animate="fade-up" data-delay="100">
              <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">
                Sri Vibhav Raju Chennamadhava
              </h1>
              <p class="text-xl text-accent-coral font-medium mb-4">
                Cybersecurity Analyst • Security Operations • Cloud/IAM
              </p>
              <p class="text-text-secondary text-lg mb-6">
                Cybersecurity analyst with hands-on experience in security monitoring, incident triage, log analysis, vulnerability management, and IAM support across cloud and enterprise environments.
              </p>

              <!-- Location -->
              <div class="flex items-center justify-center md:justify-start gap-2 text-text-muted mb-6">
                <i data-lucide="map-pin" class="w-5 h-5"></i>
                <span>Denton, Texas</span>
              </div>

              <!-- Social Links -->
              <div class="flex items-center justify-center md:justify-start gap-3">
                {socialLinks.map((link) => (
                  <a
                    href={link.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 rounded-lg bg-bg-hover flex items-center justify-center text-text-secondary hover:text-text-primary hover:bg-bg-tertiary transition-all duration-200"
                    aria-label={link.name}
                  >
                    <i data-lucide={link.icon} class="w-5 h-5"></i>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section class="py-16 bg-bg-secondary">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-6" data-animate="fade-up">
            What I Focus On
          </h2>
          <p class="text-xl text-text-secondary mb-8" data-animate="fade-up" data-delay="100">
            "Clear investigations, clean evidence, and measurable remediation."
          </p>
          <p class="text-text-muted" data-animate="fade-up" data-delay="200">
            I focus on security operations and cloud security basics: triaging alerts, investigating incidents through logs and telemetry, tracking vulnerability remediation, and keeping documentation evidence-ready for audits.
          </p>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-16 bg-bg-primary">
      <div class="container">
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary text-center mb-12" data-animate="fade-up">
          Technical Expertise
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
          {skills.map((skill, index) => (
            <div
              class="bg-bg-card border border-border-default rounded-2xl p-6"
              data-animate="fade-up"
              data-delay={index * 100}
            >
              <h3 class="text-lg font-semibold text-accent-coral mb-4">{skill.category}</h3>
              <ul class="space-y-2">
                {skill.items.map((item) => (
                  <li class="text-text-secondary text-sm flex items-center gap-2">
                    <i data-lucide="check" class="w-4 h-4 text-accent-teal"></i>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Timeline Section -->
    <section class="py-16 bg-bg-secondary">
      <div class="container">
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary text-center mb-12" data-animate="fade-up">
          My Journey
        </h2>

        <div class="max-w-3xl mx-auto">
          <div class="relative">
            <!-- Timeline line -->
            <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-0.5 bg-border-default md:-translate-x-1/2"></div>

            {timeline.map((item, index) => (
              <div
                class={`relative flex items-start gap-6 mb-8 ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}
                data-animate="fade-up"
                data-delay={index * 100}
              >
                <!-- Year dot -->
                <div class="absolute left-4 md:left-1/2 w-3 h-3 bg-accent-coral rounded-full md:-translate-x-1/2 mt-2"></div>

                <!-- Content -->
                <div class={`ml-12 md:ml-0 md:w-1/2 ${index % 2 === 0 ? 'md:pr-12 md:text-right' : 'md:pl-12'}`}>
                  <span class="text-accent-coral font-bold">{item.year}</span>
                  <h3 class="text-xl font-semibold text-text-primary mt-1">{item.title}</h3>
                  <p class="text-text-secondary mt-2">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-bg-primary">
      <div class="container">
        <div class="max-w-2xl mx-auto text-center" data-animate="fade-up">
          <h2 class="text-3xl font-bold text-text-primary mb-4">
            Want to connect?
          </h2>
          <p class="text-text-secondary mb-8">
            I’m open to cybersecurity analyst / SOC roles and cloud security opportunities.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <Button href="https://github.com/VibhavChennamadhava" variant="primary" external>
              <i data-lucide="github" class="w-5 h-5"></i>
              View GitHub
            </Button>
            <Button href="/contact" variant="secondary">
              Contact
            </Button>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.querySelectorAll('[data-animate="fade-up"]').forEach((el) => {
    const delay = parseInt(el.getAttribute('data-delay') || '0') / 1000;

    gsap.from(el, {
      scrollTrigger: {
        trigger: el,
        start: 'top 85%',
        toggleActions: 'play none none none',
      },
      y: 30,
      opacity: 0,
      duration: 0.6,
      delay,
      ease: 'power2.out',
    });
  });
</script>
