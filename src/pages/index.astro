---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Button from '../components/Button.astro';
import { getFeaturedProjects } from '../data/projects';

// Fetch featured projects with GitHub stats at build time
const projects = await getFeaturedProjects(6);

const focusAreas = [
  {
    title: 'Infrastructure as Code',
    icon: 'layers',
    points: ['Terraform modules', 'AWS CloudFormation basics', 'Ansible configuration']
  },
  {
    title: 'Containers & Observability',
    icon: 'boxes',
    points: ['Docker + Kubernetes fundamentals', 'Prometheus/Grafana monitoring', 'ELK/Splunk log basics']
  },
  {
    title: 'Security Operations',
    icon: 'shield-alert',
    points: ['SIEM alert triage', 'Vulnerability management', 'IAM support & hardening','Threat Intelligence']
  },
  {
    title: 'Cyber/Pentesting tools',
    icon: 'alert-triangle',
    points: ['nmap','Kali Linux','OWASP','ZAP','nikto','Scripting']
  },
 {
    title: 'CI/CD & Automation',
    icon: 'workflow',
    points: ['Jenkins & GitHub Actions pipelines', 'Build/test/deploy automation', 'Release hygiene & rollbacks']
  },
];

const certifications = [
  { name: 'CompTIA Security+ (SY0-701)', meta: 'Issued Jul 15, 2025 • Expires Jul 15, 2028' },
  { name: 'Google (Coursera) – Foundations of Cybersecurity', meta: 'Completed Mar 1, 2024' },
  { name: 'ISC2 CC – Security Operations (Domain focus)', meta: 'Issued Nov 13, 2025' },
];

const skillGroups = [
  {
    label: 'CI/CD',
    items: ['Jenkins', 'GitHub Actions', 'GitLab CI', 'Bamboo'],
  },
  {
    label: 'IaC / Configuration',
    items: ['Terraform', 'AWS CloudFormation', 'Ansible', 'Puppet', 'Chef'],
  },
  {
    label: 'Containers / Orchestration',
    items: ['Docker', 'Kubernetes (K8s)', 'OpenShift', 'Nomad'],
  },
 {
    label: 'Cyber/Pentest Tools',
    items: ['Burp Suite', 'Kali Linux','Wireshark', 'Metasploit','Nmap'],
  },
  {
    label: 'Monitoring / Logging',
    items: ['Prometheus', 'Grafana', 'Datadog', 'ELK Stack', 'Splunk'],
  },
  {
    label: 'Security Frameworks & Ops',
    items: ['MITRE ATT&CK', 'Zero Trust', 'NIST', 'SASE', 'Incident Response'],
  },
  {
    label: 'Version Control & Collaboration',
    items: ['Git', 'GitHub', 'GitLab', 'Bitbucket'],
  },
];

const ctfProfiles = [
  {
    name: 'Hack The Box',
    href: 'https://app.hackthebox.com/users/1841858',
    badge: 'https://www.hackthebox.com/badge/image/1841858',
  },
  {
    name: 'TryHackMe',
    href: 'https://tryhackme.com/p/vibhav.chennamadhava',
    badge: 'https://tryhackme-badges.s3.amazonaws.com/vibhav.chennamadhava.png?update=1',
  },
];
---

<BaseLayout title="Sri Vibhav Raju Chennamadhava | DevSecOps • DevOps • Cybersecurity" description="Portfolio for Sri Vibhav Raju Chennamadhava: DevOps automation, IaC, containers, monitoring, and cybersecurity fundamentals (SIEM, vulnerability management, cloud/IAM).">
  <Header currentPage="home" />

  <main>
    <Hero />

    <!-- Featured Projects -->
    <section id="projects" class="section bg-bg-primary">
      <div class="container">
        <div class="text-center mb-16">
          <p class="text-xs font-semibold text-accent-coral uppercase tracking-widest mb-2">Selected</p>
          <h2 class="text-4xl md:text-5xl font-bold text-text-primary mb-4" data-animate="fade-up">
            Projects & Labs
          </h2>
          <p class="text-lg text-text-secondary max-w-2xl mx-auto" data-animate="fade-up" data-delay="100">
            Practical work across DevOps automation and security labs: build → deploy → monitor → secure.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          {projects.map((project, index) => (
            <div data-animate="fade-up" data-delay={index * 100}>
              <ProjectCard {...project} />
            </div>
          ))}
        </div>

        <div class="text-center" data-animate="fade-up" data-delay="600">
          <Button href="/projects" variant="secondary">
            View all projects
            <i data-lucide="arrow-right" class="w-4 h-4"></i>
          </Button>
        </div>
      </div>
    </section>

    <!-- Focus Areas -->
    <section class="section bg-bg-secondary">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-text-primary mb-4" data-animate="fade-up">
            What I Work On
          </h2>
          <p class="text-lg text-text-secondary" data-animate="fade-up" data-delay="100">
            DevOps practices with security-first fundamentals.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {focusAreas.map((area, index) => (
            <div
              class="bg-bg-card border border-border-default rounded-2xl p-6 hover:border-border-accent transition-all duration-300"
              data-animate="fade-up"
              data-delay={index * 100}
            >
              <div class="w-12 h-12 rounded-xl bg-bg-hover flex items-center justify-center mb-4">
                <i data-lucide={area.icon} class="w-6 h-6 text-accent-teal"></i>
              </div>
              <h3 class="text-lg font-semibold text-text-primary mb-3">{area.title}</h3>
              <ul class="space-y-2 text-sm text-text-secondary">
                {area.points.map((p) => (
                  <li class="flex items-start gap-2">
                    <span class="text-accent-coral mt-0.5">•</span>
                    <span>{p}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Skills & Certifications -->
    <section class="section bg-bg-primary">
      <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-6" data-animate="fade-up">
              Core Skills
            </h2>
            <div class="space-y-5">
              {skillGroups.map((g, idx) => (
                <div class="bg-bg-card border border-border-default rounded-2xl p-6" data-animate="fade-up" data-delay={idx * 90}>
                  <div class="text-sm font-semibold text-text-primary mb-3">{g.label}</div>
                  <div class="flex flex-wrap gap-2">
                    {g.items.map((item) => (
                      <span class="px-3 py-1 text-xs font-medium text-text-muted bg-bg-hover rounded-full">{item}</span>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-6" data-animate="fade-up">
              Certifications
            </h2>
            <div class="space-y-4">
              {certifications.map((c, idx) => (
                <div class="bg-bg-card border border-border-default rounded-2xl p-6" data-animate="fade-up" data-delay={idx * 100}>
                  <div class="text-text-primary font-semibold">{c.name}</div>
                  <div class="text-text-muted text-sm mt-1">{c.meta}</div>
                </div>
              ))}
            </div>

            <div class="mt-6" data-animate="fade-up" data-delay="400">
              <Button href="/resume.pdf" variant="secondary" external>
                <i data-lucide="file-text" class="w-5 h-5"></i>
                Download resume
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTF Profiles -->
    <section class="section bg-bg-secondary">
      <div class="container">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold text-text-primary mb-4" data-animate="fade-up">
            CTF Profiles
          </h2>
          <p class="text-lg text-text-secondary max-w-2xl mx-auto" data-animate="fade-up" data-delay="100">
            Active practice on Hack The Box and TryHackMe.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
          {ctfProfiles.map((p, idx) => (
            <a
              href={p.href}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-bg-card border border-border-default rounded-2xl p-6 hover:border-border-accent transition-all duration-300"
              data-animate="fade-up"
              data-delay={idx * 100}
            >
              <div class="flex items-center justify-between gap-4 mb-4">
                <div class="text-lg font-semibold text-text-primary">{p.name}</div>
                <div class="text-text-muted text-sm flex items-center gap-2">
                  <span>Open profile</span>
                  <i data-lucide="arrow-up-right" class="w-4 h-4"></i>
                </div>
              </div>

              <img
                src={p.badge}
                alt={`${p.name} badge`}
                loading="lazy"
                class="w-full max-w-[420px] mx-auto rounded-xl border border-border-default bg-bg-hover"
              />
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="section bg-bg-primary">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center" data-animate="fade-up">
          <h2 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">
            Let’s work together
          </h2>
          <p class="text-lg text-text-secondary mb-8">
            Open to DevOps / DevSecOps / cybersecurity roles.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <Button href="/contact" variant="primary">
              Contact
              <i data-lucide="send" class="w-4 h-4"></i>
            </Button>
            <Button href="https://github.com/VibhavChennamadhava" variant="secondary" external>
              <i data-lucide="github" class="w-5 h-5"></i>
              View GitHub
            </Button>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animate sections on scroll
  document.querySelectorAll('[data-animate="fade-up"]').forEach((el) => {
    const delay = parseInt(el.getAttribute('data-delay') || '0') / 1000;

    gsap.from(el, {
      scrollTrigger: {
        trigger: el,
        start: 'top 85%',
        toggleActions: 'play none none none',
      },
      y: 30,
      opacity: 0,
      duration: 0.6,
      delay,
      ease: 'power2.out',
    });
  });
</script>
